<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/friendsRequestsHeader"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@drawable/rectangle_rounded_bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/friendRequestTitle"
            style="@style/RobotoOverline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="FRIEND REQUESTS"
            android:textColor="@color/text_black" />

    </LinearLayout>

    <ListView
        android:id="@+id/friendRequestsListView"
        android:layout_width="match_parent"
        android:layout_height="562dp"
        android:layout_below="@id/friendsRequestsHeader"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical" />


</RelativeLayout>